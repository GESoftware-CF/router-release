<%=
  def server_ca_cert
    if_p('tcp_router.ca_cert') do |prop|
      return prop
    end.else do
      if_link('tcp_router') do |link|
        return link.p('tcp_router.mtls_ca')
      end
    end
    raise RuntimeError, 'TCP Router server ca certificate not found in properties nor in tcp_router Link. This value can be specified using the tcp_router.ca_cert property.'
  end

  server_ca_cert
-%>
